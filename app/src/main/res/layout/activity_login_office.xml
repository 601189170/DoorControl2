<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".LoginActivity">



    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="503dp"
        android:layout_marginRight="300dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_gravity="right"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="账号："
                android:textColor="#ff333333"
                android:textSize="28dp" />
            <!--android:text="FK0002"-->
            <EditText
                android:id="@+id/et1"
                android:layout_width="400dp"
                android:layout_height="60dp"

                android:gravity="center_vertical"
                android:hint="请输入登录账号"
                android:maxEms="20"
                android:maxLines="1"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textColor="#ff999999"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_gravity="right"
            android:layout_marginTop="40dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="密码："
                android:textColor="#ff333333"
                android:textSize="28dp" />

            <!--android:text="123"-->
            <EditText
                android:id="@+id/et2"
                android:layout_width="400dp"
                android:layout_height="60dp"

                android:gravity="center_vertical"
                android:hint="请输入登录密码"
                android:maxEms="30"
                android:maxLines="1"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textColor="#ff999999"
                android:textSize="20dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/post"
            android:layout_width="489dp"
            android:layout_height="60dp"
            android:layout_gravity="right"
            android:layout_marginTop="40dp"
            android:background="@color/red"
            android:gravity="center"
            android:text="登录"
            android:textColor="#fffbf9fa"
            android:textSize="20dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="260dp"
        android:layout_marginRight="481dp"
       />

    <LinearLayout
        android:id="@+id/dateLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="106dp"
        android:gravity="center"
        android:layout_gravity="right"
        android:orientation="vertical">

        <TextClock
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:format12Hour="HH:mm EEEE"
            android:format24Hour="HH:mm EEEE"
            android:textColor="#fffffffe"
            android:textSize="26dp"
            tools:ignore="NewApi" />

        <TextClock
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-5dp"
            android:format12Hour="yyyy -MM- dd"
            android:format24Hour="yyyy -MM- dd"
            android:textColor="#fffffffe"
            android:textSize="26dp"
            tools:ignore="NewApi" />
    </LinearLayout>
</FrameLayout>