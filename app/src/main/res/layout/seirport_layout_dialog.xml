<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="460dp"
        android:layout_height="500dp"
        android:background="@drawable/bg_white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center">

            <TextView
                android:id="@+id/now_text"
                style="@style/TextSize_24black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black3"
                android:textStyle="normal" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line3" />

        <ListView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:divider="@color/line3"
            android:dividerHeight="1dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cancel"
                style="@style/TextSize_24black"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_left2"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/blue7"
                android:textSize="20dp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/ok"
                style="@style/TextSize_24black"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_right2"
                android:gravity="center"
                android:text="保存并重启"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="normal" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>