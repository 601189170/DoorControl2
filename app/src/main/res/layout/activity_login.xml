<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    tools:context=".LoginActivity">


    <TextView
        android:id="@+id/title"
        android:textColor="#5880FF"
        android:textSize="50dp"
        android:textStyle="bold"
        android:layout_gravity="right"
        android:layout_marginRight="189dp"
        android:layout_marginTop="174dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginTop="332dp"

        android:layout_width="600dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="48dp"

        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="right"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="账号："
                android:textColor="#343434"
                android:textSize="38dp" />
            <!--android:text="FK0002"-->
            <EditText
                android:id="@+id/et1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="60dp"
                android:textColorHint="#BABFCB"
                android:gravity="center_vertical"
                android:hint="请输入帐号"
                android:maxEms="20"
                android:background="@null"
                android:maxLines="1"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textColor="@color/black"
                android:textSize="34dp" />
        </LinearLayout>
        <TextView
            android:background="#DFE3ED"
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <LinearLayout
            android:layout_width="600dp"
            android:layout_height="60dp"
            android:layout_gravity="right"
            android:layout_marginTop="46dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="密码："
                android:textColor="#343434"
                android:textSize="38dp" />

            <!--android:text="123"-->
            <EditText
                android:id="@+id/et2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="60dp"
                android:textColorHint="#BABFCB"
                android:gravity="center_vertical"
                android:hint="请输入密码"
                android:maxEms="30"
                android:background="@null"
                android:maxLines="1"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textColor="@color/black"
                android:textSize="34dp" />
        </LinearLayout>
        <TextView
            android:background="#DFE3ED"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <TextView
            android:id="@+id/post"
            android:layout_width="260dp"
            android:layout_height="86dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="登录"

            android:background="@drawable/bg_login"
            android:textColor="@color/white"
            android:textSize="32dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="260dp"
        android:layout_marginRight="481dp"


       />

    <LinearLayout
        android:id="@+id/dateLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="106dp"
        android:gravity="center"
        android:layout_gravity="right"
        android:orientation="vertical">

        <TextClock
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:format12Hour="HH:mm EEEE"
            android:format24Hour="HH:mm EEEE"
            android:textColor="#fffffffe"
            android:textSize="26dp"
            tools:ignore="NewApi" />

        <TextClock
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-5dp"
            android:format12Hour="yyyy -MM- dd"
            android:format24Hour="yyyy -MM- dd"
            android:textColor="#fffffffe"
            android:textSize="26dp"
            tools:ignore="NewApi" />
    </LinearLayout>
</FrameLayout>