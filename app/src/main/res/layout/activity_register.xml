<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:layout_marginBottom="175dp"

        android:layout_width="600dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginRight="48dp"

        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_gravity="right"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="注册码："
                android:textColor="#343434"
                android:textSize="34dp" />
            <!--android:text="201909250000"-->

            <LinearLayout
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <EditText
                android:id="@+id/et1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@null"
                android:layout_height="56dp"

                android:gravity="center_vertical"
                android:hint="请输入12位数字注册码"
                android:maxEms="20"
                android:maxLines="1"
                android:textColorHint="#B6BFC3"
                android:textColor="@color/black"
                android:textSize="28dp" />
            <TextView
                android:id="@+id/regist_b"
                android:textSize="34dp"
                android:textColor="#00B7FF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="点击获取"
                android:gravity="center"
                android:layout_marginLeft="20dp"/>
            </LinearLayout>
        </LinearLayout>



        <TextView
            android:id="@+id/post"
            android:layout_width="260dp"
            android:layout_height="86dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"


            android:background="@drawable/bg_login"
            android:gravity="center"
            android:text="注册"
            android:textColor="#FFFFFF"
            android:textSize="34dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="260dp"
        android:layout_marginRight="481dp"
    />

    <LinearLayout
        android:id="@+id/dateLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="106dp"
        android:gravity="center"
        android:layout_gravity="right"
        android:orientation="vertical">

        <TextClock
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:format12Hour="HH:mm EEEE"
            android:format24Hour="HH:mm EEEE"
            android:textColor="#fffffffe"
            android:textSize="26dp"
            tools:ignore="NewApi" />

        <TextClock
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-5dp"
            android:format12Hour="yyyy -MM- dd"
            android:format24Hour="yyyy -MM- dd"
            android:textColor="#fffffffe"
            android:textSize="26dp"
            tools:ignore="NewApi" />
    </LinearLayout>
</FrameLayout>